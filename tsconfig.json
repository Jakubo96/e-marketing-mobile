{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "lib": [
            "es6",
            "dom",
            "es2015.iterable"
        ],
        "baseUrl": "src",
        "paths": {
            "app/*": [
                "app/*"
            ],
            "shared/*": [
                "app/shared/*"
            ],
            "core/*": [
                "app/core/*"
            ],
            "modules/*": [
                "app/modules/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "platforms"
    ]
}
